{
	"name": "ImportSugarCubeSales",
	"properties": {
		"activities": [
			{
				"name": "Import sales data",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFileName": "*.json",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": "TRUNCATE TABLE dbo.sales_Load",
						"writeBehavior": "insert",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"sink": {
									"name": "RowId",
									"type": "Int32"
								}
							},
							{
								"sink": {
									"name": "Retailer",
									"type": "String"
								}
							},
							{
								"sink": {
									"name": "SalesMonth",
									"type": "DateTime"
								}
							},
							{
								"sink": {
									"name": "Product",
									"type": "String"
								}
							},
							{
								"sink": {
									"name": "ManufacturerProductCode",
									"type": "String"
								}
							},
							{
								"sink": {
									"name": "SalesValueUSD",
									"type": "Decimal"
								}
							},
							{
								"sink": {
									"name": "UnitsSold",
									"type": "Int32"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "ABS_JSON_SugarCube",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ASQL_dboSalesLoad",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "Chapter3"
		},
		"annotations": []
	}
}